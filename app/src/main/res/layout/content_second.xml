<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ench.jaya.vodafoneapp.second"
    tools:showIn="@layout/activity_second">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="160dp"
      android:background="@drawable/sec_act"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="150dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="50dp"

                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/vodo" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="249dp"

            android:layout_height="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="20dp"

    />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="to your account"


                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@+id/relativeLayout"
                android:layout_toStartOf="@+id/button6" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginEnd="30dp"
            app:srcCompat="@drawable/but1" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
    android:background="#e0e0e0"
        android:layout_marginTop="2dp"
        android:id="@+id/view" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="110dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"


                android:id="@+id/linearLayout">
                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:id="@+id/relativeLayout2"

                    android:orientation="vertical"

                    android:layout_marginTop="0dp">
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"

                        android:layout_marginStart="21dp"
                        android:text="To get exclusive offers" />


                    <Button
                        android:id="@+id/button3"
                        android:layout_width="130dp"
                        android:layout_height="32dp"
                        android:text="Join Vodofone"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/hhh"
                        android:textColor="#fff"
                        android:layout_marginStart="21dp"

                        android:layout_marginTop="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignEnd="@+id/textView6"
                        android:layout_marginEnd="19dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    >

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:background="@drawable/offer"/>
                </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
         android:layout_marginTop="10dp"

            android:background="#D3D3D3"

            android:orientation="vertical">
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="30dp"
    android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:textSize="15dp"
                android:textColor="#33cccc"
                android:text="Pay Bill or Recharge for friends/family"
                />
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="29dp"


                android:id="@+id/cardView"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="40dp"

                    android:orientation="horizontal"
                    android:layout_marginRight="20dp">

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="250dp"
                        android:layout_height="40dp"


                        android:background="@drawable/friend"
                        android:ems="10"
                        android:hint="Enter contact name/number"
                        android:inputType="textPersonName" />


                </LinearLayout>

            </android.support.v7.widget.CardView>
                <Button
                    android:id="@+id/button6"
                    android:layout_width="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textView7"
                    android:layout_toEndOf="@+id/cardView"
                    android:background="#33cccc"
                    android:text="Go" />
            </LinearLayout>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/cardView2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_above="@+id/button8"
                        android:layout_marginTop="20dp"
                        android:layout_alignStart="@+id/button8"
                        android:text="We're there for you" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="120dp"
                        android:layout_height="32dp"

                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/imageView8"

                        android:layout_marginStart="35dp"
                        android:layout_marginTop="10dp"

                        android:background="@drawable/hhh"
                        android:text="Get in touch"
                        android:textColor="#fff" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="130dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="200dp"
                        android:layout_height="130dp"

                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="80dp"
                        app:srcCompat="@drawable/touch" />
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>





    </LinearLayout>















</RelativeLayout>
